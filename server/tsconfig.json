{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./dist/",
    "moduleResolution": "node",
    "jsx": "react",
    "module": "commonjs",
    "target": "es2015",
    "allowSyntheticDefaultImports": true,
    "lib": ["es2017", "dom"],
    "baseUrl": "../client",
    "noEmit": true,
    "pretty": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
